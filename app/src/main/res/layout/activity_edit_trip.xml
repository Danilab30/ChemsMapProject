<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@drawable/cheems_fondo"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Nombre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_name"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/txtName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/text_name"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Ciudad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_city"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/txtCity"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/text_city"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- PaÃ­s -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_flag"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/txtCountry"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/text_country"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Latitud -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_latitude"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/txtLatitude"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/text_latitude"
                android:padding="12dp"
                android:inputType="numberDecimal|numberSigned"/>
        </LinearLayout>

        <!-- Longitud -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_longitude"
                android:layout_marginEnd="8dp"/>

            <EditText
                android:id="@+id/txtLongitude"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:hint="@string/text_longitude"
                android:padding="12dp"
                android:inputType="numberDecimal|numberSigned"/>
        </LinearLayout>

        <!-- Guardar -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_save"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:padding="14dp"
            android:layout_marginBottom="32dp"
            android:drawablePadding="8dp"
            android:backgroundTint="#2196F3" />



    </LinearLayout>
</ScrollView>

